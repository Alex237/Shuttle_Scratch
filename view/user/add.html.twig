{% extends "user/user.html.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <form role="form" method="post">
            <div class="col-md-9">
                <section class="well">
                    <h3>Nouvel utilisateur</h3>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ setValue('email') }}" placeholder="account@acme.com" maxlength="255" required>
                            {{ formError('email') }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control" id="firstname" name="firstname" value="{{ setValue('firstname') }}" placeholder="Prénom" maxlength="45">
                            {{ formError('firstname') }}
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control" id="lastname" name="lastname" value="{{ setValue('lastname') }}" placeholder="Nom" maxlength="45">
                            {{ formError('lastname') }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter</button>

                </section>
            </div>

            <div class="col-md-3">
                <section class="well">
                    <h3>Société</h3>
                    <select></select>
                </section>

                <section class="well">
                    <h3>Roles</h3>
                    <div class="form-group">
                        <select class="form-control" id="roles" name="roles[]" multiple>
                            <option value="client">Client</option>
                            <option value="team">Equipe</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                </section>
            </div>
        </form>
    </div>
</div>
{% endblock %}